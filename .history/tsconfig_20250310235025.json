{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/data/cache.js", "src/data/posts.jsx", "src/app/(openroute)/about/page.jsx", "src/app/(openroute)/home/pages.js", "src/app/(openroute)/home/page.jsx", "src/utils/metadata.js", "src/app/(openroute)/page.jsx", "src/app/(openroute)/layout.jsx", "src/app/layout.jsx"],
  "exclude": ["node_modules"]
}
